{% extends "_layouts/base" %}
{% block body_class %}view-ourstory{% endblock %}

{% block sitemeta %}
<title>{{ "MavenShake - No-nonsense Nutrition"|t }}</title>
<meta name="description" content="{{ "The example templates for Craft Commerce"|t }}">
{% endblock %}

{% block body %}
<div id="main" class="container mx-auto p-6">
  <div class="story__wrapper">
    <div class="story__keyart">
      {% for asset in entry.keyart %}
        <img src="{{ asset.getUrl('w1000') }}" alt="{{ asset.title }}">                               
      {% endfor %}

      <figure class="caption">
        Taylor Lee, PT, DPT.
      </figure>
    </div>
    
    <div class="story__content">
      <div class="message-main">
        <h1 class="heading heading--section">{{ entry.headline }}</h1>
        <p class="subhead">
          {{ entry.subhead }}
        </p>
      </div>

      <div class="description">
        {{ entry.description }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
